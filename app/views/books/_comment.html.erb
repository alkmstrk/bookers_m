<td>
  <%= link_to user_path(comment.user) do %>
    <%=  attachment_image_tag comment.user, :profile_image, format:"jpeg",fallback:"no_image.jpg", size:"25x25" %><br>
    <%= comment.user.name %>
  <% end %>
</td>
<td><%= comment.comment %></td>
<% if comment.user == current_user %>
  <td><%= link_to "Destroy", book_comments_path(comment), method: :delete, remote: true %></td>
  <td><%= comment.id %></td>
<% end %>