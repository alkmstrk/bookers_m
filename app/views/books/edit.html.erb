<%= render 'books/errors', var: @book %>

<div class="col-md-6 col-md-offset-3">
  <h1>Editing Book</h1>

  <%= form_for(@book) do |f| %>
    <div class="field row">
      <h4>Title</h4>
      <%= f.text_field :title, class:"col-xs-12" %>
    </div>

    <div class="field row">
      <h4>Body</h4>
      <%= f.text_area :body, class:"col-xs-12" %>
    </div>
    <br>
    <div class="actions row">
      <p><%= f.submit class: "btn btn-primary col-xs-12" %></p>
    </div>
    <% end %>

  <br>
  <p>
    <%= link_to "Show", book_path(@book) %>
    |
    <%= link_to "Back", books_path %>
  </p>
</div>