<%= render 'books/errors', var: @book_new %>

<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'books/list', user: current_user, book: @book_new %>
    </div>

    <div class="col-md-9">
      <h2>Books</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr class="book_<%= book.id %>">
              <%= render 'post', book: book %>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>

  </div>
</div>