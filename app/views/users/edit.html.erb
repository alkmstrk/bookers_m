<%= render 'books/errors', var: @user %>

<div class="col-md-6 col-md-offset-3">
  <h1>User info</h1>

  <%= form_for(@user) do |f| %>
    <div class="field row">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, class: "col-xs-12" %>
    </div>

    <div class="field row">
      <%= f.label :profile_image, "Image" %>
      <%= f.attachment_field :profile_image, class: "col-xs-12" %>
    </div>
    <div class="field row">
      <%= f.label :introduction %>
      <%= f.text_area :introduction, autofocus: true, class: "col-xs-12" %>
    </div>
    <br>
    <div class="actions row">
      <p><%= f.submit class: "btn btn-primary col-xs-12" %></p>
    </div>
  <% end %>
</div>